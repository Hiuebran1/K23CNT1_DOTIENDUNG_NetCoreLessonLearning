@model IEnumerable<DtdLesson8.Models.DtdAccount>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ID)</th>
            <th>@Html.DisplayNameFor(model => model.DtdFullname)</th>
            <th>@Html.DisplayNameFor(model => model.DtdEmail)</th>
            <th>@Html.DisplayNameFor(model => model.DtdPhone)</th>
            <th>@Html.DisplayNameFor(model => model.DtdAddress)</th>
            <th>@Html.DisplayNameFor(model => model.DtdAvatar)</th>
            <th>@Html.DisplayNameFor(model => model.DtdBirthday)</th>
            <th>@Html.DisplayNameFor(model => model.DtdPassword)</th>
            <th>@Html.DisplayNameFor(model => model.DtdLink)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.DtdFullname</td>
                <td>@item.DtdEmail</td>
                <td>@item.DtdPhone</td>
                <td>@item.DtdAddress</td>
                <td><img src="@item.DtdAvatar" width="50" /></td>
                <td>@item.DtdBirthday.ToString("dd/MM/yyyy")</td>
                <td>@item.DtdPassword</td>
                <td><a href="@item.DtdLink" target="_blank">Facebook</a></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
