@model DtdLab06.Models.Employee

@{
    ViewData["Title"] = "Thêm mới nhân viên";
}

<h2 class="my-3">Thêm mới nhân viên</h2>

<form asp-action="DtdCreateSubmit" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="MaSV" class="form-label">Mã SV</label>
        <input asp-for="MaSV" class="form-control" />
    </div>

    <div class="col-md-6">
        <label asp-for="HoTen" class="form-label">Họ tên</label>
        <input asp-for="HoTen" class="form-control" />
    </div>

    <div class="col-md-6">
        <label asp-for="NgaySinh" class="form-label">Ngày sinh</label>
        <input asp-for="NgaySinh" type="date" class="form-control" />
    </div>

    <div class="col-md-6">
        <label asp-for="Phone" class="form-label">Số điện thoại</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="col-md-6">
        <label asp-for="Luong" class="form-label">Lương</label>
        <input asp-for="Luong" type="number" class="form-control" />
    </div>

    <div class="col-md-6">
        <label asp-for="Status" class="form-label">Trạng thái</label>
        <select asp-for="Status" class="form-select">
            <option>Đang học</option>
            <option>Đã tốt nghiệp</option>
            <option>Bảo lưu</option>
        </select>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="DtdIndex" class="btn btn-secondary">Quay lại</a>
    </div>
</form>
